<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Поле для названия теста -->
    <EditText
        android:id="@+id/test_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Test Name"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/questions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Question"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/add_option_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Option"
            android:visibility="gone" />

        <Button
            android:id="@+id/save_test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Test"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>
